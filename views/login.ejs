<!-- Section hero -->
<section class="banner_header">

  <img src="/images/Banner.png" alt="Banner image">
  <div class="banner__title">
    <h2>User login</h2>
  </div>

</section>

<!-- Section Login -->
<section class=" form">

  <div class="signup__content container container--pall">
    <form class="form__box" id="loginform" method="POST" action="/users/login">
      <fieldset>
        <legend>Login</legend>
        <%- include ("./partials/messages"); %>
        <div class="form__content">
          <input type="email" id="email" name="email" placeholder="Email" required autofocus>
          <input type="password" id="password" name="password" placeholder="Password" required>
          <input class="form_btn" type="submit" id="loginValidation" value="Login">
          <p>
            <a class="a_hover" href="/users/forgot_password" target="_blank">Forgot your Password ?</a></br></br>
            Don't have an account ? <a class="a_hover" href="/users/signup">Signup</a>
          </p>
        </div>
      </fieldset>
    </form>

  </div>
</section>